.text-center{
  display: block;
  text-align: center;
  font-size: 20px;
}
.userInfo{
  display: flex;
  text-align: center;
  margin: 50rpx 0;
  padding: 10rpx;
}
.userInfo>view{
  flex: 1;
}
.userHeader{
  border-radius: 50%;
  width: 230rpx;
  height: 230rpx
}
.basicInfo{
  text-align: left;
  font-size: 28rpx;
}
.basicInfo>text{
  display: block
}
.addressBlock{
  border-bottom: 1px solid #e4e4e4;
}
.addressBlock>text{
  padding:30rpx 50rpx;
  
  width: 100%;
  display: block;
}
.newAddress{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1px solid #e4e4e4;
  color: red;
}